---
    import art1 from "./art1.jpg"
    import art2 from "./art2.jpg"
    import art3 from "./art3.jpg"
    import art4 from "./art4.jpg"
---

<div class="mx-12">
    <h1 class="my-24 text-center text-xl">Latest Art Places</h1>
    <div class="grid grid-cols-1 gap-24 xl:mx-48 xl:grid-cols-2">
        <div class="relative group">
            <img class=" relative rounded-lg w-full z-10 transition-all group-hover:-translate-x-3" src="./art1.jpg" alt="painting"/>
            <div class="absolute left-0 top-0 group-hover:translate-x-4 w-full h-full bg-black"></div>
        </div>
        <div class="relative group">
            <img class=" relative rounded-lg w-full z-10 transition-all group-hover:-translate-x-3" src="./art2.jpg" alt="painting"/>
            <div class="absolute left-0 top-0 group-hover:translate-x-4 w-full h-full bg-black"></div>
        </div>
        <div class="relative group">
            <img class=" relative rounded-lg w-full z-10 transition-all group-hover:-translate-x-3" src="./art3.jpg" alt="painting"/>
            <div class="absolute left-0 top-0 group-hover:translate-x-4 w-full h-full bg-black"></div>
        </div>
        <div class="relative group">
            <img class=" relative rounded-lg w-full z-10 transition-all group-hover:-translate-x-3" src="./art4.jpg" alt="painting"/>
            <div class="absolute left-0 top-0 group-hover:translate-x-4 w-full h-full bg-black"></div>
        </div>
    </div>
</div>